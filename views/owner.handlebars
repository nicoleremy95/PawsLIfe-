<div class="owner-page container">
    <!-- pet professional or pet owner buttons and info divs -->
    <div class="row card">
        <div class="col s9 l12">
            <ul class="tabs">
                <li class="tab col s1"></li>
                <li class="tab col s3"><a href="/user/professional"><b>professional</b></a></li>
                <li class="tab col s3"><a href="/user/owner"><b>pet owner</b></a></li>
                <li class="tab col s3"><a href="/user/account-profile"><b>view my profile</b></a></li>
                <li class="tab col l1"></li>
            </ul>
        </div>
    </div>

    <div class="row">
        <h1>owner profile</h1>
        <div class="user-profile">
            <h2>welcome, {{first_name}} !</h2>
        </div>
    </div>



    {{!--CREATE A PET --}}
    <div class="row create-pet">
        <h2>add a pet</h2>
        <ul>
            {{!-- choose for cat or dog  --}}
            <button class="add-dog"><i class="fas fa-dog"></i>dogs</button>
            <button class="add-cat"><i class="fas fa-cat"></i>cats</button>
        </ul>

        {{!-- show either addcat or adddog handlebar  --}}
        <div class="col s12" id="info-add">{{>addcat}}</div>
        <div class="col s12" id="info-add">{{>adddog}}</div>
    </div>
    {{!-- show pet family for owner --}}
    <div class="row pets">
        <h2>pet family</h2>
        <div class="row" id="pet-family">
            {{#each Customer}}
            <div class="col s12 l4 card parent-user petcard">
                <div class="card-stacked">
                    <span class="card-title">name: {{first_name}}</span>
                    <div class="card-content">
                        <ul>
                            <li>breed:{{breed}} </li>
                            <li>size: {{size}}</li>
                            <li>temperment: {{temperment}} </li>
                            <li>special care: {{special_care}} </li>
                            <li>pet_type: {{pet_type}} </li>
                            <li>picture: {{picture}} </li>
                            <li>age: {{age}} </li>
                        </ul>
                    </div>
                </div>
                <div class="card-action">
                    <button data-id={{id}} id="delete-pet">delete pet</button>
                </div>
            </div>
            {{/each}}
        </div>


    {{!-- show pet  bookings  --}}
    <div class="row">
        <h2>pet bookings</h2>
        <div class="pet-bookings">view my pet bookings</div>
        <br>
        <br>
        <br>
    </div>

    {{!-- pet ratings  --}}
    <div class="row">
        <h2>pet ratings</h2>
        <div class="pet-ratings">view my pet ratings</div>
    </div>
</div>