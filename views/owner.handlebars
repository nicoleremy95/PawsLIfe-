<div class="owner-page container">
    <!-- pet professional or pet owner buttons and info divs -->
    <div class="row card">
        <div class="col s9 l12 offset-s5">
            <ul class="tabs">
                <li class="tab col s3"><a href= "/user/professional">professional</a></li>
                <li class="tab col s3"><a href="/user/owner" >pet owner</a></li>
                <li class="tab col s3"><a href="/user/account-profile">edit my profile</a></li>
            </ul> 
        </div>
    </div>  
    
    <div class="row">
            <h2>owner profile</h2>
                <div class="user-profile">
                    <h3>welcome, {{first_name}} !</h3> 
                </div>
    </div>

    

    {{!--CREATE A PET --}}
    <div class="row create-pet">
        <h2>add a pet</h2>
            <ul>
                {{!-- choose for cat or dog  --}}
                <button class="add-dog"> dogs</button>
                <button class="add-cat"> cats</button>
            </ul> 

        {{!-- show either addcat or adddog handlebar  --}}
        <div class= "col s12" id="info-add">{{>addcat}}</div>
        <div class= "col s12" id="info-add">{{>adddog}}</div>
    </div>
        {{!-- show pet family for owner --}}
    <div class="row pets">
        <h2>pet family</h2>
            <div class="row" id="pet-family">
            {{#each Customer}}
                    <div class="col s12 l3 card blue-grey darken-1 parent-user">
                        <div class="card-content white-text">
                            <span class="card-title">name: {{first_name}}</span>
                            <div class="card-content">
                                <ul>
                                    <li>breed:{{breed}}</li>
                                    <li>size: {{size}}</li>
                                    <li>temperment: {{temperment}}</li>
                                    <li>special care: {{special_care}}</li>
                                    <li>pet_type: {{pet_type}}</li>
                                    <li>picture: {{picture}}</li>
                                    <li>age: {{age}}</li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-action">
                            <button data-id={{id}} class="delete-pet">delete pet</button>
                        </div>
                    </div>
                {{/each}}
            </div>
    </div>

        {{!-- show pet  bookings  --}}
    <div class="row">
        <h2>pet bookings</h2>
        <div class= "pet-bookings">view my pet bookings</div>
        <br>
        <br>
        <br>
    </div>

        {{!-- pet ratings  --}}
    <div class="row">
        <h2>pet ratings</h2>
        <div class= "pet-ratings">view my pet ratings</div>
    </div>
</div>