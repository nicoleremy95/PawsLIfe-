<div class="professional-page container">

    <!-- pet professional or pet owner buttons and info divs -->
   
    <div class="row card">
        <div class="col s9 l12">
             <ul class="tabs">
                 <li class="tab col s1"></li>
                <li class="tab col s3"><a href= "/user/professional"><b>professional</b></a></li>
                <li class="tab col s3"><a href="/user/owner"><b>pet owner</a></li></b>
                <li class="tab col s3"><a href="/user/account-profile"><b>view my profile</b></a></li>
                <li class="tab col l1"></li>
            </ul>
        </div>
    </div>

    <div class="row">
            <h1>professional profile</h2>
                <div class="user-profile">
                    <h2>welcome, {{first_name}} !</h2> 
                </div>
    </div>
   
    <!-- CREATE AN OFFER  -->
    <div class="row create-listing">
        <h2>create a posting</h2>
        <ul>
            {{!-- choose for cat or dog  --}}
            <button class="service-dog white-text waves-effect waves-light btn-large blue darken-3"><i class="fas fa-dog"></i> for dogs </button>
            <button class="service-cat white-text waves-effect waves-light btn-large blue darken-3"><i class="fas fa-cat"></i> for cats </button>
        </ul>

        {{!-- show either servicedog or servicecat handlebar  --}}
        <div class= "col s12" id="info-service">{{>servicedog}}</div>
        <div class= "col s12" id="info-service">{{>servicecat}}</div>
    </div>
    

    {{!-- show professional active listings  --}}
    <div class="row active">
        <h2>Jobs you've posted</h2>
        
            <div class="row" id="active-postings">
                {{#each Provider}}
                    <div class="col s12 m6">
                        <div class="card parent-user hoverable center-align mostly-customized-scrollbar">
                            <div class="card-content">
                                <span class="card-title">service: <br> {{title}} </span>
                                <div class="card-content left-align">
                                    <ul>
                                        <li><span style="font-weight:bold;">Service Description: </span> {{title}} </li>
                                        <li><span style="font-weight:bold;">service type: </span>{{service_type}} </li>
                                        <li><span style="font-weight:bold;">pet type: </span> {{animal_type}}</li>
                                        <li><span style="font-weight:bold;">pet size: </span>{{size_restrictions}} </li>
                                        <li><span style="font-weight:bold;">duration: </span>{{duration}} </li>
                                        <li><span style="font-weight:bold;">cost: </span>{{cost}}</li>
                                    </ul>
                                    
                                </div>
                            </div>
                            <div class="card-action">
                                <button data-id={{id}} class="delete-posting">delete posting</button>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
    </div> 

    {{!-- show professional bookings --}}
    <div class="row booked">
        <h2>booked postings</h2>
        <div class="booked-postings">this will have the booked listings displayed as cards in the users profile</div>
        <br>
        <br>
        <br>
    </div>

    {{!-- show professional  listing ratings  --}}
    <div class="row">
        <h2>listing ratings</h2>
        <div class= "listing-ratings">view my pet ratings</div>
    </div>  
</div>
    
