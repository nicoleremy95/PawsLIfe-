
<div class="row" id="pet-family">
   {{#each Pets}}
        <div class="col s12 m6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">name: {{first_name}}</span>
                    <div class="card-content">
                        <ul>
                            <li>breed:{{breed}} <button>edit</button></li>
                            <li>size: {{size}}<button>edit</button></li>
                            <li>temperment: {{temperment}} <button>edit</button></li>
                            <li>special care: {{special_care}} <button>edit</button></li>
                            <li>pet_type: {{pet_type}} <button>edit</button></li>
                            <li>picture: {{picture}} <button>edit</button></li>
                            <li>age: {{age}} <button>edit</button></li>
                        </ul>
                    </div>
                </div>
                <div class="card-action">
                    <button data-id={{id}} id="save-pet">save pet</button>
                    <button data-id={{id}} id="delete-pet">delete pet</button>
                </div>
            </div>
        </div>
    {{/each}}
</div>