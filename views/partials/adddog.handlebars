    {{!-- CREATE A DOG --}}
<div class="add-dog-page">
    <h2>dogs</h2>
        {{!-- dog name --}}
        <form >
            <label for="dog-name">what is the name?</label>
                <input type="text" name="dog-name" id="dog-name" placeholder="dog name"> 
        </form>
        <br>

        {{!-- dog breed --}}
        <form >
            <label for="breed">what breed?</label>
                <input type="text" name="breed" id="dog-breed" placeholder="dog breed"> 
        </form>
        <br>

        {{!-- dog size --}}
        <form >
        <label for="dog-size">choose a dog size</label>
            <input list="dog-size-list" name="dog-size-list" id="dog-size">
            <datalist id="dog-size-list">
                <option value="petit pup (0-15lbs)">
                <option value="medium pup (15lbs-25lbs)">
                <option value="large pup (25lbs-40lbs)">
                <option value="xlarge pup (40lbs-65lbs)">
                <option value="mega pup (65lbs +)">
            </datalist>  
        </form>
        <br>

        {{!-- dog age --}}
        <form >
            <label for="dog-age">what is the age?</label>
                <input type="text" age="dog-age" id="dog-age" placeholder="dog age"> 
        </form>
        <br>

        {{!-- dog temperment --}}  
        <form>
            <label for="dog-temperment">dog temperment</label>
                <input list="dog-temperment-list" name="dog-temperment-list" id="dog-temperment">
                <datalist id="dog-temperment-list">
                    <option value="friendly">
                    <option value="aggressive">
                    <option value="calm">
                    <option value="nervous">
                </datalist>    
        </form>
        <br>

        {{!-- dog special care --}}
        <form >
            <label for="dog-care">are there any special care items for your pet?</label>
                <input type="text" name="dog-care" id="dog-care" placeholder="special care"> 
        </form>
        <br>

        {{!-- submit dog --}}
        <form>
            <input type="submit" value="submit" id="add-dog-form">
        </form>
</div>